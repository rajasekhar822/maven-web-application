try{
sendslacknotifications("STARTED")
stage('CheckoutCode'){
git credentialsId: 'd6a33959-608f-4f05-8d5b-0700ebf49294', url: 'https://github.com/rajasekhar822/maven-web-application.git'
}

stage('Build'){
sh "${mavenHome}/bin/mvn clean package"
}

  /*
